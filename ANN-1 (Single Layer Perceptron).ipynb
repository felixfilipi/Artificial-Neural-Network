    "import numpy as np\n",
    "\n",
    "#prepare dataset\n",
    "dataset = [[1,1],[1,0],[0,1],[0,0]]\n",
    "target = [0,1,1,0]\n",
    "\n",
    "#neuron model\n",
    "layer = {\n",
    "    \"input\": 2,\n",
    "    \"output\":1\n",
    "}\n",
    "\n",
    "#initialize weight & bias\n",
    "#stochastic (random dataset)\n",
    "weight = np.random.rand(layer[\"input\"])\n",
    "bias = np.random.rand(layer[\"output\"])\n",
    "\n",
    "#print(np.array(dataset).shape) // print dataset's array \n",
    "#print(np.array(target).shape) // print target's array\n",
    "\n",
    "#process \n",
    "def feed_forward(dataset): \n",
    "    u = np.matmul(dataset, weight)\n",
    "    return activation(u+bias)\n",
    "    \n",
    "#activation function\n",
    "def activation(val):\n",
    "    if(val >= 0):\n",
    "        return 1\n",
    "    else:\n",
    "        return 0\n",
    "    \n",
    "epoch = 10 #training loop\n",
    "learning_rate = 0.2 #learning speed\n",
    "\n",
    "for i in range(epoch):\n",
    "    rand = np.random.randint(0,4)\n",
    "    data = dataset[rand]\n",
    "\n",
    "    #get output\n",
    "    output = feed_forward(data)\n",
    "    print(output)\n",
    "\n",
    "    #calculate error\n",
    "    error = target[rand]-output\n",
    "\n",
    "    #update weight and bias\n",
    "    weight = np.add(weight, np.array(data) * learning_rate * error) #np.add sum for in matrix pattern\n",
    "    bias = bias + output * learning_rate * error\n",
    "\n",
    "    print(weight)\n",
    "    print(bias)\n",
    "\n",
    "matches = 0\n",
    "#testing loop\n",
    "for index, data in enumerate(dataset):\n", #for index, data in enumerate(count,value)
    "    output = feed_forward(data)\n",
    "    print(\"Expectation: \", target[index])\n",
    "    print(\"Result: \", output)\n",
    "    if(output == target[index]):\n",
    "        matches += 1\n",
    "\n",
    "print(\"Accuracy {}%\".format(matches*100/4))\n"
   ]
